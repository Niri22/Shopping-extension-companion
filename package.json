{
  "name": "wishcart",
  "version": "1.1.0",
  "description": "WishCart - A modern Chrome extension for smart shopping with wishlist management and automatic price tracking",
  "main": "popup.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "lint": "eslint *.js tests/*.js",
    "lint:fix": "eslint *.js tests/*.js --fix"
  },
  "keywords": [
    "chrome-extension",
    "wishlist",
    "price-tracking",
    "shopping",
    "e-commerce",
    "price-monitoring",
    "deals",
    "shopping-assistant"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.0",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-promise": "^6.1.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!tests/**",
      "!docs/**",
      "!coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "babel": {
    "presets": ["@babel/preset-env"]
  },
  "eslintConfig": {
    "extends": ["standard"],
    "env": {
      "browser": true,
      "jest": true,
      "webextensions": true
    },
    "globals": {
      "chrome": "readonly"
    }
  }
} 