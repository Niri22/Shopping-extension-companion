{
  "manifest_version": 3,
  "name": "Page Title & Price Fetcher",
  "version": "1.1",
  "description": "A Chrome extension that fetches and displays the title and price of any webpage",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Page Title & Price Fetcher"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["config.js", "utils.js", "content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
} 